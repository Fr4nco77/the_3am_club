---
import "../styles/global.css";
import Player from "@components/player/Player";
import Sidebar from "@components/sidebar/Sidebar.astro";
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <div
      class="mx-auto grid h-full w-full max-w-[1400px] gap-8 px-4 py-8 md:max-h-screen lg:grid-cols-[400px_1fr] xl:grid-cols-[450px_1fr]"
    >
      <Sidebar />
      <div class="grid size-full grid-rows-[100px_1fr] gap-8">
        <Player client:load />
        <div
          class="w-full rounded-[10px] border-2 border-[#790063] bg-black/40 p-8 shadow-2xl backdrop-blur-sm"
        >
          <slot />
        </div>
      </div>
    </div>
  </body>
</html>
