---
import {
  ApplePodcast,
  Spotify,
  TikTok,
  Twitch,
  YouTube,
} from "@assets/socialIcons";
import ButtonOpen from "@components/nav/ButtonOpen.astro";
import Menu from "@components/nav/Menu.astro";
import CardHost from "@components/sidebar/CardHost.astro";
import CrazyImage from "@components/sidebar/CrazyImage.astro";
import SocialLink from "@components/sidebar/SocialLink.astro";
---

<div
  id="sidebar"
  class="relative flex size-full flex-col overflow-hidden rounded-[10px] border-2 border-[#790063] bg-black/40 p-4 backdrop-blur-sm md:flex-row md:items-center md:justify-evenly md:px-8 lg:min-h-0 lg:flex-col lg:items-stretch lg:justify-start lg:overflow-y-auto"
>
  <!-- Overlay Dark -->
  <div
    id="nav_backdrop"
    class="pointer-events-none invisible fixed inset-0 z-10 bg-black/50 opacity-0 backdrop-blur-sm transition-all duration-300 ease-in-out"
  >
  </div>

  <!-- Menu -->
  <ButtonOpen />
  <Menu />

  <!-- Hero -->
  <div
    id="hero"
    class="mb-8 flex flex-col place-items-center text-center perspective-midrange md:mb-0 lg:mb-8"
  >
    <CrazyImage />

    <h1
      class="mb-2 text-4xl font-bold tracking-tight text-white drop-shadow-[0_0_8px_rgba(255,255,255,0.2)] text-shadow-[0_0_20px_rgba(255,255,255,0.3)]"
      style={{
        fontFamily: "serif",
      }}
    >
      <span class="mb-1 block text-sm font-light tracking-[0.2em]">~THE~</span>
      <span
        class="bg-gradient-to-r from-white via-purple-100 to-white bg-clip-text text-transparent"
      >
        3 A.M CLUB
      </span>
    </h1>
    <p class="text-sm font-light tracking-wide text-purple-200">
      DONDE LAS IDEAS NO DUERMEN
    </p>
  </div>

  <div>
    <!-- Hosts -->
    <div class="mb-8">
      <h3
        class="mb-4 border-b border-[#790063]/50 pb-2 text-lg font-semibold tracking-wider text-white"
      >
        ANFITRIONES
      </h3>
      <div class="space-y-4">
        <CardHost
          name="Franco Carreras"
          job="FILÓSOFO & HOST"
          image="/avatars/avatar_franco.webp"
          color="purple"
        />
        <CardHost
          name="Charles Bukowski"
          job="ESCRITOR & CO-HOST"
          image="/avatars/avatar_bukowski.webp"
          color="cyan"
        />
      </div>
    </div>
    <!-- Links -->
    <div aria-label="Redes sociales">
      <h3
        class="mb-4 border-b border-[#790063]/50 pb-2 text-lg font-semibold tracking-wider text-white"
      >
        ESCÚCHANOS
      </h3>
      <div class="flex justify-center space-x-1 md:space-x-4">
        <SocialLink to="https://podcasts.apple.com/" label="Apple Podcasts">
          <ApplePodcast />
        </SocialLink>
        <SocialLink to="https://open.spotify.com/" label="Spotify">
          <Spotify />
        </SocialLink>
        <SocialLink to="https://www.tiktok.com/" label="TikTok">
          <TikTok />
        </SocialLink>
        <SocialLink to="https://www.youtube.com/" label="YouTube">
          <YouTube />
        </SocialLink>
        <SocialLink to="https://www.twitch.tv/" label="Twitch">
          <Twitch />
        </SocialLink>
      </div>
    </div>
  </div>
</div>
